@model AddCompetitionViewModel


 <meta name="viewport" content="width=device-width, initial-scale=1">
 <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
 <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>
 <link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" placeholder="Location...">
                <span asp-validation-for="Location" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details"></label>
                <textarea asp-for="Details" class="form-control" placeholder="Details..."></textarea>
                <span asp-validation-for="Details" class="small text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Date"></label>
                <input  asp-for="Date" class="form-control" id="datepicker"/>
                <span asp-validation-for="Date" class="small text-danger"></span>
            </div>
            @foreach (var cb in Model.AgeGroupsCheckBoxes)
            {

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@cb.Id" name="AgeGroupString" id="@cb.Id" checked="@cb.IsChecked">
                    <label class="form-check-label" for="@cb.Id">
                        @cb.Gender @cb.Age
                    </label>
                </div>
            }
            <div class="text-center">
                <input class="btn btn-secondary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

 <script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>