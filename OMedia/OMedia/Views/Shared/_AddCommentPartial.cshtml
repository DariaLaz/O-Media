@model AddCommentModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" placeholder="Title...">
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Comment" asp-route-id="@Model.NewsId"/>
            </div>
        </form>
    </div>
</div>
