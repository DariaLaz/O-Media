@using OMedia.Extensions
@model TeamsViewModel

<link href="/css/style.css" rel="stylesheet">


  <div class="container py-3 inline w-75 p-3">
    <div>
      <div>
        <div class="card">
          <div class="card-body p-4">
            <h3 class="text-center ">@Model.Name</h3>
            <div class="row">
              <div class="col">
                <div class="d-flex flex-start">
                  <div class="flex-grow-1 flex-shrink-1">
                    <div>
                      <h5>
                        @Model.Name has @Model.CountOfMembers members that are organizers of @Model.CountOfCompetitions competitions.
                      </h5>
                    </div> 
                     <div class="row">
                         <a asp-area="" asp-controller="Team" asp-action="Details" asp-route-id="@Model.Id" 
                            asp-route-information="" class="btn btn-secondary">Details</a>
                     </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>