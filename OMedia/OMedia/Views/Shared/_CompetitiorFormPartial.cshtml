@model CompetitorViewModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeGroupId"></label>
                <select asp-for="AgeGroupId" class="form-control">
                    @foreach (var ag in Model.AgeGroups)
                    {
                        <option value="@ag.Id">@ag.Gender @ag.Age</option>
                    }
                </select>
                <span asp-validation-for="AgeGroupId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId"></label>
                <select asp-for="TeamId" class="form-control">
                    @foreach (var t in Model.Teams)
                    {
                        <option value="@t.Id">@t.Name</option>
                    }
                </select>
                <span asp-validation-for="TeamId" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>