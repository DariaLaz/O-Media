@using OMedia.Extensions
@model ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">


<div class="container-fluid">
<div class="container">
  <!-- Title -->
  <div class="d-flex justify-content-between align-items-center py-3">
    <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> @Model.Name</h2>
  </div>

  <!-- Main content -->
  <div class="row">
    <div class=@*"col-lg-8"*@>
      <!-- Details -->
      <div@* class="card mb-4"*@>
        <div class="card-body">
          <div class="mb-3 d-flex justify-content-between">
          </div>
          <table class="table table-borderless">
            <tbody>
                <tr>
                    <td>
                        <ol>
                            @Model.Competitions.Count competitions
                            @foreach (var comp in @Model.Competitions)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Competition" asp-action="Details" asp-route-id="@comp.Id" 
                                        asp-route-information="" >@comp.Name</a>
                                </li>
                            }
                        </ol>
                    </td>
                    <td>
                        <ol>
                            @Model.CompetitionsOrganized.Count competitions organized:
                            @foreach (var comp in @Model.CompetitionsOrganized)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Competition" asp-action="Details" asp-route-id="@comp.Id" 
                                        asp-route-information="" >@comp.Name</a>
                                </li>
                            }
                        </ol>
                    </td>
                    <td>
                        <ol>
                            @Model.News.Count news:
                            @foreach (var news in @Model.News)
                            {
                                <li>
                                    <partial name="_NewsPartial" model="@news" />
                                </li>
                            }
                        </ol>
                    </td>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>