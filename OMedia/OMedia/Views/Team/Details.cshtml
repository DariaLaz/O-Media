@using OMedia.Extensions

@model TeamDetailsModel
@{
    ViewData["Title"] = "Details";
}


<div class="container-fluid">
<div class="container">
  <!-- Title -->
  <div class="d-flex justify-content-between align-items-center py-3">
    <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> @Model.Name</h2>
  </div>

  <!-- Main content -->
  <div class="row">
    <div class="col-lg-8">
      <!-- Details -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="mb-3 d-flex justify-content-between">
          </div>
          <table class="table table-borderless">
            <tbody>
                <tr>
                    <td>
                        <ol>
                            @Model.Competitors.Count members
                            @foreach (var member in @Model.Competitors)
                            {
                                <li>
                                    <a>@member.Name</a>
                                </li>
                            }
                        </ol>
                    </td>
                    <td>
                        <ol>
                            @Model.Competitions.Count competitions
                            @foreach (var competition in @Model.Competitions)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Competition" asp-action="Details" asp-route-id="@competition.Id" 
                                        asp-route-information="" >@competition.Name</a>
                                </li>
                            }
                        </ol>
                    </td>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>